<UserControl x:Class="Auftragsverwaltung.WPF.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Auftragsverwaltung.WPF.Views"
             xmlns:vm="clr-namespace:Auftragsverwaltung.WPF.ViewModels"
             mc:Ignorable="d"
             RenderOptions.EdgeMode="Aliased"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.Resources>
            <vm:CustomerViewModel x:Key="ViewModel"/>
        </Grid.Resources>

        <TextBlock Text="CustomerView"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="289,225,0,0" VerticalAlignment="Top" 
                Command="{Binding Path=GetCustomerCommand, Mode=OneWay, Source={StaticResource ViewModel}}"/>
    </Grid>
</UserControl>
